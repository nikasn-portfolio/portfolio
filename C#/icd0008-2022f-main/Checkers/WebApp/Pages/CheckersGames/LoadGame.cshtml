@page
@using System.Net
@using Domain
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model WebApp.Pages.CheckersGames.LoadGame

<h1>Load</h1>

<h4>CheckersGame</h4>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CheckerGame" class="control-label"></label>
                <input asp-for="CheckerGame" class="form-input" value="@Model.CheckerGame!.Name"></input>
                <span asp-validation-for="CheckerGame" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CheckersGameState.Id" class="control-label">Game State</label>
                <select asp-for="CheckersGameState.Id" class="form-select" asp-items="Model.SelectListStates"></select>
                <span asp-validation-for="CheckersGameState.Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Load" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}