@page
@model WebApp.Pages.CheckersGames.IndexModel

@{
    ViewData["Title"] = "Checkers Games";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CheckersGame[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CheckersGame[0].StartedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CheckersGame[0].EndedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CheckersGame[0].GameWonPlayer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CheckersGame[0].Player1Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CheckersGame[0].Player1Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CheckersGame[0].Player2Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CheckersGame[0].Player2Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CheckersGame[0].CheckersOption)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.CheckersGame) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GameWonPlayer)
            </td>
            <td>
                <a asp-page="./CurrentGame" asp-route-id="@item.Id" asp-route-player="player1">
                @Html.DisplayFor(modelItem => item.Player1Name)
                </a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Player1Type)
            </td>
            <td>
                <a asp-page="./CurrentGame" asp-route-id="@item.Id" asp-route-player="player2">
                @Html.DisplayFor(modelItem => item.Player2Name)
                </a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Player2Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CheckersOption!.Name)
            </td>
            <td>
                <a asp-page="./CurrentGame" asp-route-id="@item.Id">Continue</a> |
                <a asp-page="./LoadGame" asp-route-id="@item.Id">Load Game</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
